{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Linux"
      }
    },
    {
      "name": "windows",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Windows"
      }
    },
    {
      "name": "macos",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Darwin"
      }
    },
    {
      "name": "android",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/platform/android/gradle/cmake/android.toolchain.cmake",
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_PLATFORM": "android-28"
      }
    },
    {
      "name": "ios",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/platform/ios/toolchain/ios.toolchain.cmake",
        "CMAKE_SYSTEM_NAME": "iOS"
      }
    },
    {
      "name": "wasm",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/platform/wasm/toolchain/wasm.toolchain.cmake",
        "CMAKE_SYSTEM_NAME": "Emscripten"
      }
    }
  ]
}
