{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "android",
      "displayName": "Android Build",
      "description": "Configure for Android",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/android",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/android.toolchain.cmake",
        "ANDROID_ABI": "armeabi-v7a",
        "ANDROID_PLATFORM": "android-21",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ios",
      "displayName": "iOS Build",
      "description": "Configure for iOS",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ios",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/ios.toolchain.cmake",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "wasm",
      "displayName": "WebAssembly Build",
      "description": "Configure for WebAssembly",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/wasm",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/wasm.toolchain.cmake",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
