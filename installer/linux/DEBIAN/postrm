#!/bin/bash

set -e

echo "üßπ Nettoyage des fichiers personnalis√©s de TestApp..."

# Supprimer l‚Äôentr√©e dans le menu (si toujours pr√©sente)
if [ -f /usr/share/applications/testapp.desktop ]; then
    rm -f /usr/share/applications/testapp.desktop
fi

# Supprimer l‚Äôic√¥ne du menu
if [ -f /usr/share/icons/hicolor/64x64/apps/testapp.png ]; then
    rm -f /usr/share/icons/hicolor/64x64/apps/testapp.png
fi

# Mise √† jour des caches
if command -v update-desktop-database > /dev/null; then
    update-desktop-database /usr/share/applications || true
fi

if command -v gtk-update-icon-cache > /dev/null; then
    gtk-update-icon-cache -f /usr/share/icons/hicolor || true
fi

echo "‚úÖ TestApp d√©sinstall√© proprement."

exit 0
